rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    // Users root doc (profile/meta)
    match /users/{uid} {
      allow read, write: if isOwner(uid);

      // Meta / profile-like docs (non-date keyed)
      match /meta/{docId} {
        allow read, write: if isOwner(uid);
      }

      // Daily Check-Ins (date-keyed)
      match /dailyCheckIns/{dayId} {
        allow read, write: if isOwner(uid) && dayId.matches('^\\d{4}-\\d{2}-\\d{2}$');
      }

      // Water Logs (date-keyed)
      match /waterLogs/{dayId} {
        allow read, write: if isOwner(uid) && dayId.matches('^\\d{4}-\\d{2}-\\d{2}$');
      }

      // Evening Check-Ins (date-keyed)
      match /eveningCheckIns/{dayId} {
        allow read, write: if isOwner(uid) && dayId.matches('^\\d{4}-\\d{2}-\\d{2}$');
      }
    }
  }
}
